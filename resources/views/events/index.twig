{% extends "layout.twig" %}

{% block title %}{{ 'events.title'|trans }}{% endblock %}
{% block content %}
			<div class="jumbotron">
				<div class="container text-center">
					<h1><i class="fa fa-list"></i> {{ 'events.header'|trans }}</h1>
					<p>{{ 'events.text'|trans }}</p>
                    <p><a class="btn btn-success" href="{{ path_for('new-event', {'locale': locale}) }}"><i class="fa fa-plus"></i> {{ 'base.new'|trans }}</a></p>
				</div>
			</div>
            <hr>
			<div class="container">
{% if (result.user_id == auth.getUser().id or auth.isAdmin()) and delete %}
                <p>{{ 'base.deleteQuestion'|trans }}</p>
                <div class="row">
                    <div class="col-xs-12 col-md-6 text-left">
                        <a class="btn btn-success" href="{{ path_for('events', {'locale': locale}) }}"><i class="fa fa-arrow-left"></i> {{ 'base.cancel'|trans }}</a>
                    </div>
                    <div class="col-xs-12 col-md-6 text-right">
                        <form action="{{ path_for('delete-event', {'locale': locale, 'id': id}) }}" method="post" role="form">
                            {{ form.csrf_field(csrf) }}
                            <button class="btn btn-danger" type="submit"><i class="fa fa-trash"></i> {{ 'base.delete'|trans }}</button>
                        </form>
                    </div>
                </div>
{% else %}
{% if results is not empty %}
                <table class="table table-hover table-striped">
					<thead>
						<tr>
							<th>{{ 'base.name'|trans }}</th>
							<th>{{ 'base.date'|trans }}</th>
							<th>{{ 'base.subscription_end'|trans }}</th>
							<th>{{ 'base.options'|trans }}</th>
						</tr>
					</thead>
					<tbody>
{% for result in results %}
						<tr>
							<td>{{ result.name }}</td>
							<td>{{ result.date }}</td>
							<td>{{ result.subscription_end }}</td>
							<td>
                                <a class="btn btn-info" href="{{ path_for('edit-event', {'locale': locale, 'id': result.id }) }}"><i class="fa fa-pencil"></i> {{ 'base.edit'|trans }}</a>
                                <a class="btn btn-danger" href="{{ path_for('delete-event', {'locale': locale, 'id': result.id }) }}"><i class="fa fa-trash"></i> {{ 'base.delete'|trans }}</a>
                            </td>
						</tr>
{% endfor %}
{% else %}
        				<p>{{ 'base.no-result'|trans }}</p>
{% endif %}
					</tbody>
				</table>

                {{ results.links()|raw }}

{% endif %}
			</div>
{% endblock %}
