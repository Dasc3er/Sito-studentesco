{% extends "layout.twig" %}

{% block title %}{{ element.name }}{% endblock %}
{% block content %}
			<div class="jumbotron">
				<div class="container text-center">
					<h1><i class="fa fa-list"></i> {{ element.name }}</h1>
					<p>{{ element.description }}</p>
				</div>
			</div>
			<hr>
			<div class="container">
				<table class="table table-hover table-striped">
					<thead>
						<tr>
							<th>{{ 'row-name'|trans }}</th>
							<th>{{ 'row-value'|trans }}</th>
						</tr>
					</thead>
					<tbody>
{% for row in rows %}
						<tr>
							<td>{{ row.name }}</td>
							<td>{{ row.value }}</td>
						</tr>

{% else %}
        				<p>{{ 'products.no-rows'|trans }}</p>
{% endfor %}
					</tbody>
				</table>

{% for row in sections %}
				<div class="row">
					<div class="col-xs-12 col-md-{% if loop.index is odd %}3{% else %}9{% endif %}">
						{{ sections.description }}
					</div>
					<div class="col-xs-12 col-md-{% if loop.index is odd %}9{% else %}3{% endif %}">
						{{ images[loop.index].name }}
					</div>
				</div>
{% endfor %}

			</div>
{% endblock %}