{% extends "layout.twig" %}

{% block title %}{{ 'index.title'|trans }}{% endblock %}
{% block content %}
            <div class="jumbotron">
				<div class="container text-center">
					<h1><i class="fa fa-graduation-cap"></i> {{ 'index.header'|trans }}</h1>
					<p>{{ 'index.text'|trans }}</p>
				</div>

                <div id="myCarousel" class="carousel slide margin-top" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
{% for element in carousel %}
                        <li data-target="#myCarousel" data-slide-to="{{ loop.index - 1 }}"{% if loop.index == 1 %} class="active"{% endif %}></li>
{% endfor %}
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
{% for element in carousel %}
                        <div class="item{% if loop.index == 1 %} active{% endif %}">
                            <img src="{{ img.getUrl(element.image) }}">
{% if element.title or element.description %}

                            <div class="carousel-caption">
                                <h3>{{ element.title }}</h3>
                                <p>{{ element.description }}</p>
                            </div>
{% endif %}
                        </div>
{% endfor %}
                    </div>
                </div>

				<!-- Left and right controls
				<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
					<span class="icon-prev" aria-hidden="true"></span>
					<span class="sr-only">{{ 'previous'|trans }}</span>
				</a>
				<a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
					<span class="icon-next" aria-hidden="true"></span>
					<span class="sr-only">{{ 'next'|trans }}</span>
				</a>-->
			</div>
			<hr>
			<div class="container">
				<div class="row">
					<div class="col-xs-12 col-md-6"></div>
					<div class="col-xs-12 col-md-6"></div>
				</div>

                <h3 class="text-center">{{ 'index.inspire'|trans }}</h3>
			</div>
{% endblock %}
{% block scripts %}
		<script>
			$('.carousel .item').each(function() {
				$(this).css('background-image','url('+$(this).find('img').attr('src')+')').css('background-repeat','repeat').find('img').css('visibility','hidden');
			});
		</script>
{% endblock %}
